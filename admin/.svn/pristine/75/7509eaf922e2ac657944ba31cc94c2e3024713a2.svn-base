        };

        var post = $.post(postPage, postData).done(function (data) {
            $("select[name='dm_nganh_nghe[]']").val(data.split(',')).trigger("chosen:updated");
        })
                .fail(function () {

                });
    }
    function load_tinh_thanh() {
