                }
                $sql_insert_nganh_nghe = rtrim($sql_insert_nganh_nghe, ",");
                $pdo->exec($sql_insert_nganh_nghe);
            }
            $pdo->commit();
            return $this->getId();
        } catch (Exception $exc) {
            $pdo->rollBack();
            echo $exc->getMessage();
        }
        return -1;
    }

}
