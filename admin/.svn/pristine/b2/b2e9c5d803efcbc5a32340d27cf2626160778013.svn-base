<?php

class Dm_trinh_do_tin_hocController {

    const FOLDER_VIEW = 'Dm_trinh_do_tin_hoc';

    public function index() {
        if (isset($_SESSION["user_info_admin"])) {
            $tabid = '';
            if (isset($_GET["tabid"])) {
                $tabid = $_GET["tabid"];
            }
            $obj_check_role = UtilityController::checkRole();
            $_IsView = $obj_check_role["view"];
            $_IsUpdate = $obj_check_role["update"];
            $_IsDelete = $obj_check_role["delete"];
            if (!$_IsView) {
                UtilityController::gotoPage("index.php");
            }
            // Get số trang
            $page = isset($_POST["page"]) ? ((intval($_POST["page"]) < 0) ? 0 : intval($_POST["page"])) : 1;
            $start = ($page - 1) * SOTRANG;
            $num_rows_per_page = SOTRANG;

            $Dm_trinh_do_tin_hoc_model = new Dm_trinh_do_tin_hocModel();


            // lấy giá trị search

            $_Name = isset($_POST["Name"]) ? $_POST["Name"] : "";


            // delete
            if ($_IsDelete) {
                if (isset($_POST["btnDelete"])) {
                    if (isset($_POST["checklist"])) {
                        $array_id = $_POST["checklist"];
                        if ($array_id != null) {
                            $array_delete = array();
                            foreach ($array_id as $value) {
                                $array_delete[] = $value;
                            }
                            if ($Dm_trinh_do_tin_hoc_model->delete_array($array_delete)) {

                                UtilityController::messageSuccess();
                            } else {
                                UtilityController::messageError();
                            }
                        }
                    }
                }
            }


            // get list            
            $Dm_trinh_do_tin_hoc_model->setName($_Name);

            $Dm_trinh_do_tin_hoc_model->setRowStart($start);
            $Dm_trinh_do_tin_hoc_model->setNumLinePerPage($num_rows_per_page);
            $list = $Dm_trinh_do_tin_hoc_model->getList();

            $rowrount = $Dm_trinh_do_tin_hoc_model->getCount();
            $phantrang = UtilityController::phantrang($rowrount, $num_rows_per_page, $page);
            require_once ADMIN_VIEW_DIRECTORY . DS . Dm_trinh_do_tin_hocController::FOLDER_VIEW . DS . "list.php";
        }
    }

    public function update() {
        if (isset($_SESSION["user_info_admin"])) {
            $tabid = '';
            if (isset($_GET["tabid"])) {
                $tabid = $_GET["tabid"];
            }
            $obj_check_role = UtilityController::checkRole();
            $_IsView = $obj_check_role["view"];
            $_IsUpdate = $obj_check_role["update"];
            if (!$_IsView) {
                UtilityController::gotoPage("index.php");
            }
            $Dm_trinh_do_tin_hoc_model = new Dm_trinh_do_tin_hocModel();
            $_Id = "";
            $_Name = "";
            $_Name_En = "";
            $_Alias = "";
            $_Description = "";
            $_Order = $Dm_trinh_do_tin_hoc_model->getMaxOrder();

            if (isset($_GET["id"])) {
                $_Id = $_GET["id"];

                $Dm_trinh_do_tin_hoc_model->setId($_Id);
                $obj = $Dm_trinh_do_tin_hoc_model->getObj();
                if (!is_null($obj)) {
                    $_Id = $obj->Id;
                    $_Name = $obj->Name;
                    $_Name_En = $obj->Name_En;
                    $_Alias = $obj->Alias;
                    $_Description = $obj->Description;
                    $_Order = $obj->Order;
                }
            }
            require_once ADMIN_VIEW_DIRECTORY . DS . Dm_trinh_do_tin_hocController::FOLDER_VIEW . DS . "update.php";
        }
    }

    public function doUpdate() {
        if (isset($_SESSION["user_info_admin"])) {
            $tabid = '';
            if (isset($_GET["tabid"])) {
                $tabid = $_GET["tabid"];
            }
            $obj_check_role = UtilityController::checkRole();
            $_IsUpdate = $obj_check_role["update"];
            if (!$_IsUpdate) {
                UtilityController::gotoPage("index.php");
            }

            $username = $_SESSION["user_info_admin"]["username"];
            $_Name = isset($_POST["Name"]) ? $_POST["Name"] : "";
            $_Name_En = isset($_POST["Name_En"]) ? $_POST["Name_En"] : "";
            $_Alias = UtilityController::convert2Alias($_Name);
            $_Description = isset($_POST["Description"]) ? $_POST["Description"] : "";
            $_Order = isset($_POST["Order"]) ? $_POST["Order"] : "";

            $Dm_trinh_do_tin_hoc_model = new Dm_trinh_do_tin_hocModel();
            $Dm_trinh_do_tin_hoc_model->setName($_Name);
            $Dm_trinh_do_tin_hoc_model->setName_En($_Name_En);
            $Dm_trinh_do_tin_hoc_model->setAlias($_Alias);
            $Dm_trinh_do_tin_hoc_model->setDescription($_Description);
            if (!empty($_Order)) {
                $Dm_trinh_do_tin_hoc_model->setOrder($_Order);
            }


            $Dm_trinh_do_tin_hoc_model->setUpdatedBy($username);
            $_Id = "";
            if (isset($_GET["id"])) {
                $_Id = $_GET["id"];
            }
            if (!empty($_Id)) {
                $Dm_trinh_do_tin_hoc_model->setId($_Id);
                if ($Dm_trinh_do_tin_hoc_model->update()) {
                    UtilityController::message("Đã cập nhật thành công");
                } else {
                    UtilityController::messageError();
                }
                UtilityController::gotoPage("index.php?ctl=Dm_trinh_do_tin_hoc&act=update&id=" . $_Id . "&tabid=" . $tabid);
            } else {
                $Dm_trinh_do_tin_hoc_model->setCreatedBy($username);
                if ($Dm_trinh_do_tin_hoc_model->insert()) {
                    UtilityController::message("Đã thêm mới thành công");
                } else {
                    UtilityController::messageError();
                }
                UtilityController::gotoPage("index.php?ctl=Dm_trinh_do_tin_hoc&act=update&tabid=" . $tabid);
            }
        }
    }

}
