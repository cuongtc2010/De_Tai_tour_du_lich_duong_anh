    function load_nganh_nghe() {
        var postPage = '<?= ROOT_ADMIN_URL . "/index.php?ctl=Dm_ung_vien&act=fill_ds_nganh_nghe_ung_vien" ?>';
        var postData = {
            postType: "ajax",
